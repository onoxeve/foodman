<div id="food-<%= food.id %>">
  <div class="food">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-body" >
          <%= image_tag food.image.to_s, class: "img-responsive" %>
        </div>
        <div class="panel-footer">
          <div class="form-buttons">
            <% if logged_in? %>
              <%= render 'likes/likes', food: food %>
              <% if current_user == food.user %>
                <%= button_to food, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-default btn-sm' do %>
                  <div class="glyphicon glyphicon-trash" aria-hidden="true"></div>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>