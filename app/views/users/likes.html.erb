<div class="row">
  <div class="col-xs-12">
    <h2><%= @user.name %></h2>
    <div class="user_profile">
      <ul class="nav nav-tabs nav-justified">
        <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>My Foods <span class="badge"><%= @count_foods %></span><% end %></li>
        <li class="<%= 'active' if current_page?(likes_user_path(@user)) %>"><%= link_to likes_user_path(@user) do %>My Likes <span class="badge"><%= @count_likes %></span><% end %></li>
      </ul>
    </div>
    <%= render @foods %>
  </div>
</div>