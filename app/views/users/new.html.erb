<div class="row">
  <div class="col-xs-offset-2 col-xs-8">
    <div class="panel panel-primary">
      <div class="panel-heading">Sign up to see Food from people all over the world.</div>
      <div class="panel-body">
        <%= form_for(@user) do |f| %>
          <div class="form-group">
            <%= f.text_field :name, class: 'form-control', placeholder: "Username" %>
          </div>

          <div class="form-group">
            <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Password(confirmation)" %>
          </div>

            <%= f.submit 'Sign up', class: 'btn btn-primary btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>